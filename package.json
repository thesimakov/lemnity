{
  "name": "lemnity",
  "version": "0.2.2",
  "description": "Full-stack monorepo app with React frontend and NestJS backend using pnpm workspaces",
  "scripts": {
    "dev": "pnpm --parallel --recursive run start:dev",
    "dev:client": "pnpm --filter client start:dev",
    "dev:server": "pnpm --filter server start:dev",
    "build": "pnpm --recursive run build",
    "start": "pnpm --filter server start",
    "install:client": "pnpm --filter client install",
    "install:server": "pnpm --filter server install",
    "clean": "rm -rf node_modules packages/*/node_modules projects/*/node_modules",
    "reinstall": "pnpm run clean && pnpm install",
    "build:client": "pnpm --filter client build",
    "build:server": "pnpm --filter server build",
    "format": "prettier --check . --ignore-path .gitignore",
    "format:fix": "prettier --write . --ignore-path .gitignore",
    "docker:up": "pnpm check-secrets && docker compose up -d --wait && docker compose --profile setup run --rm minio_setup",
    "docker:down": "docker compose down",
    "docker:db": "docker compose up -d postgres",
    "docker:up:prod": "docker compose -f docker-compose.prod.yml up -d",
    "docker:down:prod": "docker compose -f docker-compose.prod.yml down",
    "docker:db:prod": "docker compose -f docker-compose.prod.yml up -d postgres",
    "dev:docker": "pnpm docker:db && pnpm dev",
    "generate:api": "bash scripts/generate-api.sh",
    "build:packages": "pnpm --filter './packages/**' --if-present build",
    "check-secrets": "./scripts/check-secrets.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.21.0",
  "dependencies": {
    "axios": "^1.11.0",
    "@nestjs/mapped-types": "^2.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.25.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
