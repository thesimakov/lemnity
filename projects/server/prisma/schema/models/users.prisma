enum Role {
  USER
  ADMIN
}

model User {
  id        String   @id @default(cuid())

  email     String   @unique
  name      String?
  password  String
  role      Role     @default(USER)
  passwordResetTokens PasswordResetToken[]
  projects  Project[]
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}
