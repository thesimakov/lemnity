model WheelOfFortuneSpin {
  id        String   @id @default(cuid())

  widgetId  String   @map("widget_id")
  wheelWidget WheelOfFortuneWidget @relation(fields: [widgetId], references: [widgetId], onDelete: Cascade)

  sessionId String   @map("session_id")
  sectorId  String   @map("sector_id")
  isWin     Boolean  @map("is_win")

  createdAt DateTime @default(now()) @map("created_at")

  @@unique([widgetId, sessionId])
  @@index([sessionId])
  @@index([widgetId])
  @@map("wheel_of_fortune_spins")
}
